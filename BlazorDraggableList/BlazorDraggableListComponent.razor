@namespace BlazorDraggableList

@inherits BlazorDraggableListBase<TItemGeneric>

@typeparam TItemGeneric

<style>

    .draggable-item {
        cursor: grab;
    }

    .dropzone {
        position: absolute;
        z-index: 1;
        display: none;
        top: 0px;
        left: 0px;
        width: 100%;
        height: 100%;
        background-color: rgba(255,216,0,0.3);
        border: 3px dashed #ff006e;
    }

    .active-dropzone {
        background-color: rgba(76, 255, 0, 0.3);
        border: 3px dashed rgb(0, 255, 144);
    }

</style>

<div id="@Id" class="container blazor-draggable-list" style="padding-left: 0; padding-right: 0;">
    <div class="row w-100 align-items-center justify-content-center overflow-auto my-4 @Class" style="margin-left: 0; margin-right: 0;">

        @for (int i = 0; i < Items.Count(); i++)
        {
            var temp = i;

            <div class="position-relative h-100 p-0 @(Orientation == BlazorDraggableListOrientationType.Horizontal ? "col-6 col-sm-6 col-md-4 col-lg-3 col-xl-3" : "col-12")">

                <div id="blazor-draggable-list-item-@temp" class="draggable-item" draggable="true">
                    @BlazorDraggableListItem(Items[temp])
                </div>

                <div id="blazor-draggable-list-item-dropzone-@temp" class="dropzone dropzone-@temp" />

            </div>
        }

    </div>
</div>

