@namespace BlazorDraggableList
@inherits BlazorDraggableListBase<TItemGeneric>
@typeparam TItemGeneric

<style type="text/css">

    .draggable-item {
        cursor: grab;
    }

    .dropzone {
        position: absolute;
        z-index: 1;
        display: none;
        top: 0px;
        left: 0px;
        width: 100%;
        height: 100%;
        background-color: rgba(255,216,0,0.3);
        border: 3px dashed #ff006e;
    }

    .active-dropzone {
        background-color: rgba(76, 255, 0, 0.3);
        border: 3px dashed rgb(0, 255, 144);
    }

    @@media(min-width: 576px) {
        .draggable-item-horizontal {
            display: initial;
            vertical-align: initial;
            float: left;
            width: 50%;
        }
    }

    @@media(min-width: 768px) {
        .draggable-item-horizontal {
            display: initial;
            vertical-align: initial;
            float: left;
            width: 50%;
        }
    }

    @@media(min-width: 992px) {
        .draggable-item-horizontal {
            float: none;
            display: inline-block;
            vertical-align: middle;
            width: 30% !important;
        }
    }

    @@media(min-width: 1200px) {
        .draggable-item-horizontal {
            float: none;
            display: inline-block;
            vertical-align: middle;
            width: 24% !important;
        }
    }

    @@media(min-width: 1400px) {
        .draggable-item-horizontal {
            float: none;
            display: inline-block;
            vertical-align: middle;
            width: 24% !important;
        }
    }

    @@media(max-width: 575px) {
        .draggable-item-horizontal {
            display: initial;
            vertical-align: initial;
            float: left;
            width: 50%;
        }
    }

    @@media(max-width: 320px) {
        .draggable-item-horizontal {
            display: initial;
            vertical-align: initial;
            float: left;
            width: 100%;
        }
    }
</style>

@if (Items != null && Items.Any())
{

    <div id="@Id" class="w-100 overflow-auto my-4 @Class">
        <div class="align-items-center justify-content-center text-center w-100 @(Orientation == BlazorDraggableListOrientationType.Horizontal ? "" : "d-flex flex-column")">

            @for (int i = 0; i < Items.Count(); i++)
            {
                var temp = i;

                <div class="position-relative h-100 p-0 @(Orientation == BlazorDraggableListOrientationType.Horizontal ? "draggable-item-horizontal" : "")" style="@(Items.Count() == 1 ? "width: 100%;" : "")">

                    <div id="blazor-draggable-list-item-@temp" class="draggable-item" draggable="true">
                        @BlazorDraggableListItem(Items[temp])
                    </div>

                    <div id="blazor-draggable-list-item-dropzone-@temp" class="dropzone dropzone-@temp" />

                </div>
            }

        </div>
    </div>

}

